# CSCAN RPC 服务 Dockerfile

FROM golang:1.24-alpine AS builder

WORKDIR /app

RUN apk add --no-cache git

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -ldflags="-s -w" -o /cscan-rpc ./rpc/task/task.go

# 运行镜像
FROM alpine:3.18

WORKDIR /app

RUN apk add --no-cache ca-certificates tzdata

ENV TZ=Asia/Shanghai

COPY --from=builder /cscan-rpc .
COPY docker/task.yaml ./etc/

EXPOSE 9000

CMD ["./cscan-rpc", "-f", "etc/task.yaml"]
